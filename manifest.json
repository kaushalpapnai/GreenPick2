{
    "manifest_version": 2,
    "name": "GreenPick",
    "description": "GreenPick shows you a list of sustainable options for what you just googled. Help the planet and live healthier, with just one extra click.",
    "version": "1.0",
    "icons": {   
      "128": "icon2.png"   
    },
    "browser_action": {
      "default_icon": "icon2.png",
      "default_popup": "window.html"
    },
    "background": {
      "scripts": ["background.js"],
      "persistent": false
    },
    "permissions": [
      "activeTab",
      "tabs",
      "notifications",
      "https://*/",
      "http://*/"
    ],
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Ctrl+Shift+L",
          "mac": "MacCtrl+Shift+L"
        },
        "description": "Opens window.html"
      }
    }
  }
  